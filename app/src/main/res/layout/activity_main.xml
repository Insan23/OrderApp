<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context="id.onestep.orderapp.MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:backgroundTint="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:textSize="8pt"
                        android:id="@+id/ckNasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi Goreng" />

                    <EditText
                        android:layout_alignParentRight="true"
                        android:id="@+id/etJumlahNasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Jumlah"
                        android:inputType="number"
                        android:textSize="8pt" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:textSize="8pt"
                        android:id="@+id/ckMie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mie Goreng" />

                    <EditText
                        android:layout_alignParentRight="true"
                        android:id="@+id/etJumlahMie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Jumlah"
                        android:inputType="number"
                        android:textSize="8pt" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:textSize="8pt"
                        android:id="@+id/ckEsteh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es Teh" />

                    <EditText
                        android:layout_alignParentRight="true"
                        android:id="@+id/etEsteh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Jumlah"
                        android:inputType="number"
                        android:textSize="8pt" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:textSize="8pt"
                        android:id="@+id/ckEsjeruk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es jeruk" />

                    <EditText
                        android:layout_alignParentRight="true"
                        android:id="@+id/etEsjeruk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan Jumlah"
                        android:inputType="number"
                        android:textSize="8pt" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER SUMMARY"
            />
        <TextView
            android:id="@+id/orderSummary"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />


        <!--    android:fontFamily="@font/fonts"
            />-->

    </LinearLayout>
</ScrollView>



</LinearLayout>
